<%- include('../partials/header') %>

<h1 class="header center text-lighten-2">Venues</h1>
<div class="parallax-container">
  <div class="parallax"><img src="https://i.imgur.com/QHZktNq.png"></div>
</div>
<table class="striped responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Pricey?</th>
      <th>Two Drink Min?</th>
      <th>Reviews</th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% venues.forEach(function(venue) { %>      
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.address %></td>
        <td><%= venue.priceTix %></td>
        <td><%= venue.twoDrink ? 'Yep' : 'Nah' %></td>
        <td><a href="venues/<%= venue._id %>">REVIEWS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table><br>
  <% if (user) { %> 
  <div class="icon-block">
    <a href="/venues/new"><i class="material-icons left">add</i>ADD VENUE</a>
  </div>
  <% } %>

<br><br><br><br><br>

<%- include('../partials/footer') %>